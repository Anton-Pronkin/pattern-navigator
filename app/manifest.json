{
  "name": "Pattern navigator",
  "version": "0.1.0",
  "description": "Let's match text patterns and navigate to the landing page.",
  "manifest_version": 2,
  "permissions": ["contextMenus"], 
  "background": {
    "scripts": ["scripts/background.min.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["scripts/content.min.js"]
  }],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}